<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context="com.biscom.signageenumerator.FirstActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="551dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ekiti"
        android:alpha="0.25"
        android:elevation="10dp"
        android:id="@+id/bglogin" android:contentDescription="@string/todo"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/rltanimation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@mipmap/ic_launcher"
            android:elevation="10dp" />

        <TextView
            android:id="@+id/ekiti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="0.1"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Kwara State Signage"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="0.8"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Kwasaa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:gravity="bottom"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnxplore"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_white"
                android:elevation="24dp"
                android:fontFamily="sans-serif"
                android:text="@string/explore"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_white"
                android:elevation="24dp"
                android:fontFamily="sans-serif"
                android:text="@string/login"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
